{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "types": ["vite/client"],
    "paths": {
      "@frontend/vue": ["./src"],
      "@frontend/vue/*": ["./src/*"],
      "@frontend/core": ["../core/src"],
      "@frontend/core/*": ["../core/src/*"],
      "@frontend/mediator": ["../mediator/src"],
      "@frontend/mediator/*": ["../mediator/src/*"],
      "@app/shared": ["../../../shared/src"],
      "@app/shared/*": ["../../../shared/src/*"]
    }
  },
  "include": ["src", "vite.config.ts"]
}
