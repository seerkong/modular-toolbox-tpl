{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["vitest/globals"],
    "paths": {
      "@frontend/mediator": ["./src"],
      "@frontend/mediator/*": ["./src/*"],
      "@frontend/core": ["../core/src"],
      "@app/shared": ["../../../shared/src"]
    }
  },
  "include": ["src", "test"]
}
