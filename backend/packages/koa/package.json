{
  "name": "@backend/koa-shell",
  "version": "0.1.0",
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "dev": "node --import @swc-node/register/esm-register --watch src/index.ts",
    "start": "node dist/index.js",
    "build": "bun build --target node --external sqlite3 --external reflect-metadata src/index.ts --outfile dist/index.js"
  },
  "dependencies": {
    "@app/shared": "workspace:*",
    "@backend/mediator": "workspace:*",
    "koa": "^2.15.0",
    "koa-body": "^6.0.1",
    "koa-router": "^12.0.0",
    "koa-route": "^4.0.1",
    "koa-send": "^5.0.1",
    "koa-websocket": "^7.0.0",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@swc-node/register": "^1.10.0",
    "@swc/core": "^1.10.0",
    "@types/koa": "^2.15.0",
    "@types/koa-route": "^3.2.8",
    "@types/koa-router": "^7.4.8",
    "@types/koa-send": "^4.1.4",
    "@types/node": "^20.0.0",
    "typescript": "^5.4.0"
  }
}
