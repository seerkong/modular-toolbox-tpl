{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["bun-types"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@backend/core/*": ["packages/core/src/*"],
      "@backend/mediator/*": ["packages/mediator/src/*"],
      "@backend/elysia-shell/*": ["packages/elysia/src/*"],
      "@backend/koa-shell/*": ["packages/koa/src/*"]
    }
  },
  "include": ["packages/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
